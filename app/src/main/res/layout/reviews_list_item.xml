<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/reviews_general_margin"
        android:layout_marginLeft="@dimen/reviews_general_margin"
        android:layout_marginTop="@dimen/reviews_general_margin"
        android:layout_marginEnd="@dimen/reviews_general_margin"
        android:layout_marginRight="@dimen/reviews_general_margin"
        android:textSize="@dimen/review_content_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/dummy_content" />

    <TextView
        android:id="@+id/review_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/dummy_author"
        android:textSize="@dimen/review_author_text_size"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="@+id/review_content"
        app:layout_constraintTop_toBottomOf="@+id/review_content" />

</android.support.constraint.ConstraintLayout>